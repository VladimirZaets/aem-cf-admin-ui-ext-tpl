      getButton() {
        return <% if (extensionManifest.headerMenuButtons.length > 1) { %>[<% } else { %>{<% } -%>
          <% extensionManifest.headerMenuButtons.forEach((button) => { %>
          <% if (extensionManifest.headerMenuButtons.length > 1) { %>{<% } %>
