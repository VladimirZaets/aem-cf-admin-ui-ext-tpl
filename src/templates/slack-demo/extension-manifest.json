{
  "displayName": "Slack Demo",
  "description": "Demo to showcase a custom button that sends the selected Content Fragments info to Slack",
  "version": "0.0.1",
  "templateFolder": "slack-demo",
  "actionBarButtons": [
    {
      "label": "Notify Slack",
      "needsModal": true,
      "id": "notify-slack"
    }
  ],
  "headerMenuButtons": [
    {
      "label": "Configure Slack",
      "needsModal": true,
      "id": "configure-slack"
    }
  ],
  "runtimeActions": [
    {
      "name": "notify-slack"
    },
    {
      "name": "get-slack-config"
    },
    {
      "name": "set-slack-config"
    }
  ],
  "templateInputs": {
    "LOG_LEVEL": "debug",
    "SLACK_WEBHOOK": "$SLACK_WEBHOOOK",
    "SLACK_CHANNEL": "$SLACK_CHANNEL"
  },
  "templateDotEnvVars": ["SLACK_WEBHOOOK", "SLACK_CHANNEL"]
}
